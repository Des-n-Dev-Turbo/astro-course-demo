---
import { Image } from 'astro:assets';
import heartBeatImage from '../content/posts/images/heartbeat.png';

export const prerender = false;

const userEmail = Astro.cookies.get('email');
---

<header
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
  <a href="/" class="flex items-center gap-4">
    <Image
      src={heartBeatImage}
      alt="Rhythm Nation Logo"
      class="size-16"
      loading="eager"
    />
    <p class="uppercase text-3xl text-zinc-900">Blog</p>
  </a>
  {
    userEmail?.value ? (
      <a
        href="/logout"
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl"
      >
        Log Out
      </a>
    ) : (
      <a
        href="/login"
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl"
      >
        Log In
      </a>
    )
  }
</header>
