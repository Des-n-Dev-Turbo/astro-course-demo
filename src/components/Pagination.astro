---
type Props = {
  prevURL?: string;
  nextURL?: string;
};

const { prevURL, nextURL } = Astro.props;
---

<div class="flex justify-between items-center">
  {
    prevURL ? (
      <a
        href={prevURL}
        class="bg-teal-900 px-6 py-3 rounded-xl text-xl text-white"
      >
        Previous
      </a>
    ) : (
      <div />
    )
  }
  {
    nextURL ? (
      <a
        href={nextURL}
        class="bg-teal-900 px-6 py-3 rounded-xl text-xl text-white"
      >
        Next
      </a>
    ) : (
      <div />
    )
  }
</div>
